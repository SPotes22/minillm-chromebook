{
  "model": {
    "name": "MiniLLM-Chromebook",
    "version": "1.0.0",
    "description": "Transformer optimizado para Chromebook con arquitectura vertical"
  },
  "hyperparameters": {
    "vocab_size": 10000,
    "d_model": 256,
    "n_heads": 4,
    "n_layers": 4,
    "d_ff": 1024,
    "max_seq_len": 256,
    "dropout": 0.1,
    "rope_theta": 10000.0,
    "use_swiglu": true,
    "use_kv_cache": true
  },
  "training": {
    "batch_size": 4,
    "learning_rate": 0.0001,
    "max_epochs": 20,
    "warmup_steps": 100,
    "gradient_accumulation": 4,
    "checkpoint_interval": 1000
  },
  "optimization": {
    "memory_saver": true,
    "chunked_attention": true,
    "chunk_size": 64,
    "quantization": "int8",
    "pruning": false,
    "compile": false
  },
  "resources": {
    "max_memory_mb": 512,
    "cpu_threads": 2,
    "use_gpu": false,
    "cache_dir": "./cache",
    "model_dir": "./models"
  },
  "tokenizer": {
    "type": "simple",
    "vocab_file": "vocab.txt",
    "special_tokens": ["<PAD>", "<EOS>", "<UNK>", "<BOS>"]
  }
}
